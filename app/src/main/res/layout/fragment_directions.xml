<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/directions_padding"
    android:paddingLeft="@dimen/directions_padding"
    android:paddingRight="@dimen/directions_padding"
    android:paddingTop="@dimen/directions_padding">

    <AutoCompleteTextView
        android:id="@+id/origin_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:hint="@string/origin_text"
        android:inputType="text" />

    <AutoCompleteTextView
        android:id="@+id/destination_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:hint="@string/destination_text"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination_textview"
        android:layout_centerHorizontal="true"
        android:background="@color/primary_color"
        android:text="@string/find_route"
        android:textColor="@android:color/white" />

</RelativeLayout>