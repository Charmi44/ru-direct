<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/directions_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/directions_margin">

    <TextView
        android:id="@+id/select_origin_textview"
        style="@style/TextViewStyle"
        android:layout_marginBottom="15dp"
        android:text="@string/origin_text" />

    <AutoCompleteTextView
        android:id="@+id/origin_ac_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_origin_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:id="@+id/select_dest_textview"
        style="@style/TextViewStyle"
        android:layout_below="@id/origin_ac_textview"
        android:layout_marginBottom="15dp"
        android:text="@string/destination_text" />

    <AutoCompleteTextView
        android:id="@+id/dest_ac_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_dest_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true" />

    <Button
        android:id="@+id/find_route_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/dest_ac_textview"
        android:layout_centerHorizontal="true"
        android:background="@color/primary_color"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/find_route"
        android:textColor="@android:color/white" />

</RelativeLayout>