<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/directions_margin"
    android:paddingRight="@dimen/directions_margin">

    <TextView
        android:id="@+id/directions_time"
        style="@style/TextViewStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/directions_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/directions_title"
        android:layout_toStartOf="@+id/directions_title"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/directions_title"
        style="@style/TextViewStyle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_color"
        android:textStyle="bold" />

</RelativeLayout>